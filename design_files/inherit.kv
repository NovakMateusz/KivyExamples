#:import utils kivy.utils

# To change background color of a Label set it before Button
<Label>
    background_color: (10/255, 250/255, 189/255, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<Button>
    font_size: 32
    background_normal: ""
    background_color: utils.get_color_from_hex("#ca000f") # change color with hex value

<TextInput>
    background_normal: ""
    background_color: (24/255, 36/255, 189/255, 1) # change color with hex RGBA
    multiline: False



<MyGridLayout>
    GridLayout:
        size: root.width, root.height
        cols: 1
        rows: 4

        GridLayout:
            cols: 2
            Label:
                text: "Name"
                # Text properties
                font_size: 28
                color: (254/255, 240/255, 0/255, 1)
                bold: True
                italic: True
                outline_color: (0, 0, 0, 1)
                outline_width: 1
            TextInput:
                id: name
            Label:
                text: "Surname"
            TextInput:
                id: surname
            Label:
                text: "Age"
            TextInput:
                id: age

        Button:
            text: "Clear"
            on_press: root.clear_text()
            font_size: 16
        Button:
            text: "Do nothing 1"
        Button:
            text: "Do nothing 2"

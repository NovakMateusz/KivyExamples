#:import utils kivy.utils

<AppLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height


        TextInput:
            id: input_value
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

            # 1 row
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "%"
                on_press: root.percent()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "<<"
                on_press: root.clear_last_digit()
            Button:
                id: clear_button
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "/"
                on_press: root.add_symbol('/')

            # 2 row
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "7"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('7')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "8"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('8')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "9"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('9')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "*"
                on_press: on_press: root.add_symbol('*')

            # 3 row
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "4"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('4')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "5"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('5')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "6"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('6')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "-"
                on_press: on_press: root.add_symbol('-')

            # 4 row
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "1"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('1')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "2"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('2')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "3"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('3')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+"
                on_press: on_press: root.add_symbol('+')

            # 5 row
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+/-"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.swap_symbol()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "0"
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: root.add_digit('0')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "."
                background_color: utils.get_color_from_hex('#6b6969')
                on_press: on_press: root.add_symbol('.')
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "="
                on_press: root.calculate()